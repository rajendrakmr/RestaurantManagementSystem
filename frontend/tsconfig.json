{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "types": ["vite/client", "node", "react", "react-dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true, // âœ… prevents JS files from being created
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.config.js"]
}
